<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FormulasActivity"
    tools:showIn="@layout/activity_formulas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/fab_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="0dp">


                <Button
                    android:id="@+id/button_priznaki"

                    android:layout_width="440dp"
                    android:layout_height="60dp"

                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="@font/gotham"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="Признаки делимости, таблица простых чисел, таблица квадратов"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_modul_korni"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.517"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                </Button>

                <Button
                    android:id="@+id/button_modul_korni"

                    android:layout_width="440dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="@font/gotham"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="Модуль числа, корни и степени"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_formul_sokr_umn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_priznaki">

                </Button>

                <Button
                    android:id="@+id/button_formul_sokr_umn"

                    android:layout_width="440dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="@font/gotham"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="Формулы сокращенного умножения"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_progresii"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_modul_korni">

                </Button>

                <Button
                    android:id="@+id/button_progresii"
                    android:layout_gravity="center"
                    android:layout_width="440dp"
                    android:layout_height="60dp"

                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="@font/gotham"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="Прогрессии"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_trigonometrii"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_formul_sokr_umn">

                </Button>

                <Button
                    android:id="@+id/button_trigonometrii"
                    android:layout_gravity="center"
                    android:layout_width="440dp"
                    android:layout_height="60dp"

                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="@font/gotham"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="Тригонометрия"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_tablica_proizvodnych"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_progresii">

                </Button>

                <Button
                    android:id="@+id/button_tablica_proizvodnych"
                    android:layout_gravity="center"
                    android:layout_width="440dp"
                    android:layout_height="60dp"

                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="@font/gotham"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="Таблица производных и интегралов"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_logarifms"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_trigonometrii">

                </Button>

                <Button
                    android:id="@+id/button_logarifms"
                    android:layout_gravity="center"
                    android:layout_width="440dp"
                    android:layout_height="60dp"

                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="@font/gotham"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="Логарифмы"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_teorie"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_tablica_proizvodnych">

                </Button>

                <Button
                    android:id="@+id/button_teorie"
                    android:layout_gravity="center"
                    android:layout_width="440dp"
                    android:layout_height="60dp"

                    android:layout_marginBottom="29dp"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="@font/gotham"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="Теория вероятности"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_logarifms">

                </Button>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>